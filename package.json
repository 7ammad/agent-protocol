{
  "name": "agent-protocol",
  "version": "0.1.0",
  "description": "Cross-tool coordination protocol for AI coding agents",
  "main": "dist/index.js",
  "bin": { "agent-protocol": "dist/cli/index.js" },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "integration-test": "vitest run tests/integration.test.ts",
    "adapter:claude": "tsx src/adapters/run-claude-adapter.ts",
    "adapter:cursor": "tsx src/adapters/run-cursor-adapter.ts"
  },
  "dependencies": {
    "sql.js": "^1.11.0",
    "chokidar": "^4.0.0",
    "commander": "^12.1.0",
    "express": "^4.21.0",
    "nanoid": "^5.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist/",
    "dashboard/",
    "LICENSE",
    "README.md"
  ],
  "engines": { "node": ">=20.0.0" },
  "type": "module",
  "license": "Apache-2.0",
  "keywords": [
    "ai",
    "agents",
    "coordination",
    "protocol",
    "claude",
    "cursor",
    "codex",
    "multi-agent"
  ],
  "prepublishOnly": "tsc"
}
